<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardViewParent">

    <LinearLayout
        style="@style/LinearLayoutParent">

        <androidx.cardview.widget.CardView
            style="@style/CardViewChild">

            <ImageView
                android:id="@+id/rv_row_place_photo"
                style="@style/CardViewImage"
                android:contentDescription="@string/attraction_location_photo" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/rv_row_place_name"
            style="@style/LocationName" />

        <TextView
            android:id="@+id/rv_row_place_phone_number"
            style="@style/LocationDetail"/>

        <TextView
            android:id="@+id/rv_row_place_address"
            style="@style/LocationDetail" />
    </LinearLayout>

</androidx.cardview.widget.CardView>